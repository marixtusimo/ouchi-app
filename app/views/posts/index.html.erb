<%= render "shared/header" %>
<div class='item-all'>
 <h2 class='title'>物件一覧</h2>
 <div class="search">
      <%= form_with(url: search_posts_path, local: true, method: :get, class: "search-form") do |form| %>
        <%= form.text_field :keyword, placeholder: "最寄り駅で検索する", class: "search-input" %>
        <%= form.submit "検索", class: "search-btn" %>
      <% end %>
 </div>
 <div class='item-contents'>
 <ul class='item-lists'>
 <% @posts.each do |post| %>
      <li class='list'>
        <%= link_to post_path(post.id) do %>
        <div class='item-img-content'>
          <%= image_tag post.image, class: "item-img" %>
        </div>
        <div class='item-info'>
          <h3 class='item-name'>
            <%= post.title %>
          </h3>
          <div class='item-price'>
            <span>家賃<%= post.price %>円<br><%= post.station %>
            <% @owner.find do |owner| %>
            <br>投稿者<%= owner.name %>
            <% end %>
            </span>
          </div>
        </div>
        <% end %>
      </li>
 <% end %>
 </ul>
 </div>
 </div>



<h1>チャットサンプル</h1>
<!--Userでログインしてたら-->
<% if user_signed_in? %>
  ~<%= current_user.name %>がログインしてます~
  <%= link_to "ログアウト", destroy_user_session_path ,:method => :delete %>
  <br>
  <h2>ログインしているオーナ一</h2>
  <br>
  <% @owners.each do |owner| %>
    <%= owner.name %>
    <!-- もしチャットルームがあったらそのチャットページへ。なければ新たなチャットルームを作成 -->
    <% if @owner_ids.include?(owner.id) %>
      <br>
      <%= link_to "チャットへ", room_path(current_user.rooms.find_by(owner_id: owner.id)) %><br>
    <% else %>
      <%= form_for Room.new do |f| %>
        <%= f.hidden_field :owner_id, :value => owner.id %>
        <%= f.submit %>
      <% end %>
    <% end %>
  <% end %>
<!--Shopでログインしてたら-->
<% elsif owner_signed_in? %>
  <h2>ユーザー一覧</h2>
  <br>
  ~<%= current_owner.name %>がログインしてます~
  <%= link_to "ログアウト", destroy_owner_session_path ,:method => :delete %>
  <br>
  <% @users.each do |user| %>
    <%= user.name %>
    <!-- もしチャットルームがあったらそのチャットページへ。なければ新たなチャットルームを作成 -->
    <% if @user_ids.include?(user.id) %>
      <br>
      <%= link_to "チャットへ", room_path(current_owner.rooms.find_by(user_id: user.id)) %><br>
    <% else %>
      <%= form_for Room.new do |f| %>
        <%= f.hidden_field :user_id, :value => user.id %>
        <%= f.submit %>
      <% end %>
    <% end %>

  <% end %>

<!--ログインしてなかったら-->
<% else %>
  <h3>ユーザー</h3>
  <%= link_to "ログイン", new_user_session_path %>
  <%= link_to "新規登録", new_user_registration_path %>
  <h3>ショップ</h3>
  <%= link_to "ログイン", new_owner_session_path %>
  <%= link_to "新規登録", new_owner_registration_path %>
<% end %>